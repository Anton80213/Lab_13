@model Лабораторная_13.Models.ПортфолиоModel
@{
    ViewBag.Title = "Портфолио Фильтр";
}

<h2>Каталог личных достижений</h2>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Личный кабинет студента", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Успеваемость", "Успеваемость", "Home")</li>
                <li>@Html.ActionLink("Портфолио", "Портфолио", "Home")</li>
                <li>@Html.ActionLink("Преподаватели", "Преподаватели", "Home")</li>
                <li>@Html.ActionLink("Фильтр личных достижений", "ПортфолиоФильтр", "Home", new { date = "", kind = "" })</li>
            </ul>
        </div>
    </div>
</div>
<form method="get">
    <div class="form-inline">
        <label class="control-label">Дата: </label>
        @Html.DropDownList("date", Model.Дата as SelectList,
                    htmlAttributes: new { @class = "form-control" })

        <label class="control-label">Вид достижения: </label>
        @Html.DropDownList("kind", Model.Вид as SelectList,
                htmlAttributes: new { @class = "form-control" })

        <input type="submit" value="Фильтр" class="btn btn-default" />
    </div>
</form>
<table>
    <tr>
        <th>Дата</th>
        <th>Вид достижения</th>
        <th>Описание</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Портфолио)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Дата)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Вид)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Описание)
            </td>
        </tr>
    }
</table>

